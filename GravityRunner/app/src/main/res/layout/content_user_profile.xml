<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include layout="@layout/toolbar_user_profile" android:id="@+id/include2"/>
    <Button
            android:text="@string/btnLevel"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:id="@+id/btnLevel" android:layout_marginTop="136dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintTop_toBottomOf="@+id/include2"
            app:layout_constraintBottom_toTopOf="@+id/btnStore"/>
    <Button
            android:text="@string/btnStore"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:id="@+id/btnStore"
            app:layout_constraintTop_toBottomOf="@+id/btnLevel" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/btnOut"/>
    <Button
            android:text="@string/btnOut"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:id="@+id/btnOut"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnStore" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/btnQuit"/>
    <Button
            android:text="@string/btnQuit"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:id="@+id/btnQuit"
            app:layout_constraintTop_toBottomOf="@+id/btnOut" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.5"/>
    <android.support.constraint.Barrier android:layout_width="wrap_content" android:layout_height="wrap_content"
                                        android:id="@+id/barrier" app:barrierDirection="left"/>


</android.support.constraint.ConstraintLayout>